    <script>
      let slideIndex = 0;
      let totalAds = document.getElementsByClassName("ad").length;
      let dots = document.getElementsByClassName("dot");

      function showSlides() {
        for (let i = 0; i < dots.length; i++) {
          dots[i].classList.remove("active");
        }
        dots[slideIndex].classList.add("active");

        slideIndex++;
        if (slideIndex >= totalAds) {
          slideIndex = 0;
        }

        setTimeout(showSlides, 5000);
      }

      showSlides();

      // Convert time to 24-hour format for sorting
      function convertTimeTo24Hour(time) {
        if (!time) return 0;

        // Try 24-hour format (HH:MM)
        if (/^(?:[01]\d|2[0-3]):[0-5]\d$/.test(time)) {
          const [hours, minutes] = time.split(':').map(Number);
          return hours * 100 + minutes;
        }

        // Try 12-hour format (H:MM AM/PM or HH:MM AM/PM)
        const match = time.match(/^(\d{1,2}):([0-5]\d)\s*(AM|PM)$/i);
        if (match) {
          let [_, hours, minutes, modifier] = match;
          hours = parseInt(hours, 10);
          minutes = parseInt(minutes, 10);

          if (hours === 12) {
            hours = 0;
          }
          if (modifier.toUpperCase() === 'PM') {
            hours += 12;
          }

          return hours * 100 + minutes;
        }

        return 0;
      }

      // Render today's schedule (limited to first 4 appointments)
      function renderTodaySchedule(appointments) {
        const container = document.getElementById('appointments-list');
        container.innerHTML = '';

        if (!appointments || appointments.length === 0) {
          container.innerHTML = `
            <li class="no-appointments-message">
              <i class="fas fa-calendar-check fa-3x"></i>
              <h4>No Appointments Today</h4>
              <p>You have no appointments scheduled for today.</p>
            </li>
          `;
          return;
        }

        // Sort appointments by time
        appointments.sort((a, b) => {
          return convertTimeTo24Hour(a.time) - convertTimeTo24Hour(b.time);
        });

        // Limit to first 4 appointments
        const limitedAppointments = appointments.slice(0, 4);

        const list = document.createElement('ul');
        list.className = 'appointments';

        limitedAppointments.forEach(appointment => {
          const listItem = document.createElement('li');
          listItem.className = 'appointment-item';
          listItem.textContent = `${appointment.time || 'N/A'} - ${appointment.clientName} (${appointment.consultationType})`;
          list.appendChild(listItem);
        });

        container.appendChild(list);
      }

      // Fetch today's schedule
      document.addEventListener('DOMContentLoaded', () => {
        fetch('/dietitian/today-schedule', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          }
        })
          .then(response => {
            if (!response.ok) {
              throw new Error(`HTTP error! Status: ${response.status}`);
            }
            const contentType = response.headers.get('content-type');
            if (!contentType || !contentType.includes('application/json')) {
              return response.text().then(text => {
                throw new Error('Received non-JSON response, possibly a redirect to login: ' + text.substring(0, 50));
              });
            }
            return response.json();
          })
          .then(data => {
            // Get the first available date key from bookingsByDay
            const todayKey = Object.keys(data.bookingsByDay || {})[0];
            const appointments = todayKey && data.bookingsByDay[todayKey] ? data.bookingsByDay[todayKey] : [];
            renderTodaySchedule(appointments);
          })
          .catch(error => {
            console.error('Error fetching today\'s schedule:', error);
            if (error.message.includes('non-JSON response') || error.message.includes('Unexpected token')) {
              const container = document.getElementById('appointments-list');
              container.innerHTML = `
                <li class="no-appointments-message">
                  <i class="fas fa-exclamation-circle fa-3x"></i>
                  <h4>Please Log In</h4>
                  <p>You need to be logged in to view your schedule. <a href="/login">Log in here</a>.</p>
                </li>
              `;
            } else {
              renderTodaySchedule([]);
            }
          });
      });
