    <script>
        // Fetch Verification Status and Recent Dietitians on Page Load
        document.addEventListener('DOMContentLoaded', async () => {
            // Verification status fetch
            const verificationSection = document.getElementById('verificationSection');
            try {
                const response = await fetch('/organization-doc/org-check-status', { method: 'GET' });
                const data = await response.json();
                
                if (data.success) {
                    const finalReportStatus = data.finalReportStatus;
                    let htmlContent = '';

                    if (finalReportStatus === 'Not Received' || finalReportStatus === 'Received') {
                        htmlContent = `
                            <div class="verification-status pending">
                                <i class="fas fa-spinner fa-spin"></i> Verification in Progress
                            </div>
                            <p class="mt-3">Your documents are under review by NutriConnect.</p>
                            <p class="text-muted mb-2">
                                Final report status: ${finalReportStatus}
                            </p>
                        `;
                    } else if (finalReportStatus === 'Verified') {
                        htmlContent = `
                            <div class="verification-status verified">
                                <i class="fas fa-check-circle"></i> Verified
                            </div>
                            <p class="mt-3">Your organization has been verified by NutriConnect.</p>
                            <p class="text-muted mb-2">
                                You can now verify dietitians.
                            </p>
                            <button class="btn btn-outline-success btn-md" onclick="window.location.href='/verify_diet'">
                                Proceed to Verify Dietitian
                            </button>
                        `;
                    } else if (finalReportStatus === 'Rejected') {
                        htmlContent = `
                            <div class="verification-status rejected">
                                <i class="fas fa-times-circle"></i> Rejected
                            </div>
                            <p class="mt-3">Your application has been rejected. View the reason in the final report.</p>
                            <p class="text-muted mb-2">
                                Please review and resubmit your documents.
                            </p>
                            <button class="btn btn-outline-danger btn-md" onclick="window.location.href='/recieved_org'">
                                View Verification Status
                            </button>
                        `;
                    } else {
                        htmlContent = `
                            <div class="verification-status rejected">
                                <i class="fas fa-exclamation-circle"></i> Unknown Status
                            </div>
                            <p class="mt-3">Received an unexpected status: ${finalReportStatus}</p>
                        `;
                    }

                    verificationSection.innerHTML = htmlContent;
                } else {
                    verificationSection.innerHTML = `
                        <div class="verification-status rejected">
                            <i class="fas fa-exclamation-circle"></i> Error
                        </div>
                        <p class="mt-3">Failed to load verification status: ${data.message || 'Unknown error'}</p>
                    `;
                }
            } catch (error) {
                console.error('Error fetching verification status:', error);
                verificationSection.innerHTML = `
                    <div class="verification-status rejected">
                        <i class="fas fa-exclamation-circle"></i> Error
                    </div>
                    <p class="mt-3">An error occurred while checking verification status.</p>
                `;
            }

            // Fetch recent dietitians
            const recentDietitiansTableBody = document.getElementById('recent-dietitians-table-body');
            try {
                const response = await fetch('/dietitian-doc/dietitians?limit=3&sort=createdAt', {
                    method: 'GET',
                    credentials: 'include'
                });
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                let dietitians = await response.json();
                
                // Ensure only the 2 most recent dietitians are displayed
                dietitians = dietitians
                    .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt))
                    .slice(0,3);
                
                recentDietitiansTableBody.innerHTML = '';
                if (dietitians.length === 0) {
                    recentDietitiansTableBody.innerHTML = `
                        <tr>
                            <td colspan="2" class="text-center">No recent dietitians found.</td>
                        </tr>
                    `;
                    return;
                }

                const statusIcons = {
                    'Not Received': 'hourglass-half',
                    'Received': 'hourglass-half',
                    'Verified': 'check-circle',
                    'Rejected': 'times-circle'
                };
                const statusBadges = {
                    'Not Received': 'warning',
                    'Received': 'warning',
                    'Verified': 'success',
                    'Rejected': 'danger'
                };

                dietitians.forEach((dietitian) => {
                    const verificationStatus = dietitian.verificationStatus || {};
                    const overallStatus = verificationStatus.finalReport || 'Not Received';
                    const displayStatus = overallStatus === 'Not Received' ? 'Pending' : overallStatus;

                    const row = `
                        <tr>
                            <td>${dietitian.name || 'Unknown Dietitian'}</td>
                            <td>
                                <span class="badge bg-${statusBadges[overallStatus]}">
                                    <i class="fas fa-${statusIcons[overallStatus]}"></i> ${displayStatus}
                                </span>
                            </td>
                        </tr>
                    `;
                    recentDietitiansTableBody.insertAdjacentHTML('beforeend', row);
                });
            } catch (error) {
                console.error('Error fetching recent dietitians:', error);
                recentDietitiansTableBody.innerHTML = `
                    <tr>
                        <td colspan="2" class="text-center text-danger">
                            <i class="fas fa-exclamation-circle"></i> Failed to load recent dietitians.
                        </td>
                    </tr>
                `;
            }
        });

        // Profile Photo Upload with Validation
        document.getElementById('profileUpload').addEventListener('change', async (e) => {
            const file = e.target.files[0];
            if (!file) return;

            if (!['image/jpeg', 'image/png'].includes(file.type)) {
                alert('Only JPEG or PNG images are allowed.');
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                alert('File size must be less than 5MB.');
                return;
            }

            // Preview image
            const reader = new FileReader();
            reader.onload = () => document.getElementById('profileImage').src = reader.result;
            reader.readAsDataURL(file);

            // Upload to backend
            const formData = new FormData();
            formData.append('profileImage', file);
            try {
                const res = await fetch('/uploadorganization', { method: 'POST', body: formData });
                const data = await res.json();
                if (data.success) {
                    alert('Profile photo uploaded successfully!');
                    window.location.reload(); // Reload to fetch new base64 image
                } else {
                    alert(`Upload failed: ${data.message || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Upload error:', error);
                alert('An error occurred during upload.');
            }
        });

        // Set modal image source when modal is shown
        const imageModal = document.getElementById('imageModal');
        imageModal.addEventListener('show.bs.modal', () => {
            const profileImage = document.getElementById('profileImage');
            const largeProfileImage = document.getElementById('largeProfileImage');
            largeProfileImage.src = profileImage.src || 'https://via.placeholder.com/150?text=Default+Organization';
        });
    </script>
