    <script>
        // Fetch Verification Status on Page Load
        document.addEventListener('DOMContentLoaded', async () => {
            const verificationSection = document.getElementById('verificationSection');
            try {
                const response = await fetch('/dietitian-doc/check-status', { method: 'GET' });
                const data = await response.json();
                
                if (data.success) {
                    const finalReportStatus = data.finalReportStatus; // Now using finalReportStatus
                    let htmlContent = '';

                    if (finalReportStatus === 'Not Received' || finalReportStatus === 'Received') {
                        htmlContent = `
                            <div class="verification-status pending">
                                <i class="fas fa-spinner fa-spin"></i> Verification in Progress
                            </div>
                            <p class="mt-3">Your documents are under review by Nutri Connect.</p>
                            <p class="text-muted mb-2">
                                Final report status: ${finalReportStatus}
                            </p>
                        `;
                    } else if (finalReportStatus === 'Verified') {
                        htmlContent = `
                            <div class="verification-status verified">
                                <i class="fas fa-check-circle"></i> Verified
                            </div>
                            <p class="mt-3">Your documents have been verified by Nutri Connect.</p>
                            <p class="text-muted mb-2">
                                Provide additional details to complete your dietitian profile and Start your Consultation Journey.
                            </p>
                            <button class="btn btn-outline-success btn-md" onclick="window.location.href='/dietitian-setup'">
                                Proceed to Dietitian Setup
                            </button>
                        `;
                    } else if (finalReportStatus === 'Rejected') {
                        htmlContent = `
                            <div class="verification-status rejected">
                                <i class="fas fa-times-circle"></i> Rejected
                            </div>
                            <p class="mt-3">Your application has been rejected, view the reason in the final report.</p>
                            <p class="text-muted mb-2">
                                Please review and resubmit your documents.
                            </p>
                            <button class="btn btn-outline-danger btn-md" onclick="window.location.href='/recieved_diet'">
                                View Verification Status
                            </button>
                        `;
                    } else {
                        htmlContent = `
                            <div class="verification-status rejected">
                                <i class="fas fa-exclamation-circle"></i> Unknown Status
                            </div>
                            <p class="mt-3">Received an unexpected status: ${finalReportStatus}</p>
                        `;
                    }

                    verificationSection.innerHTML = htmlContent;
                } else {
                    verificationSection.innerHTML = `
                        <div class="verification-status rejected">
                            <i class="fas fa-exclamation-circle"></i> Error
                        </div>
                        <p class="mt-3">Failed to load final report status: ${data.message || 'Unknown error'}</p>
                    `;
                }
            } catch (error) {
                console.error('Error fetching final report status:', error);
                verificationSection.innerHTML = `
                    <div class="verification-status rejected">
                        <i class="fas fa-exclamation-circle"></i> Error
                    </div>
                    <p class="mt-3">An error occurred while checking final report status.</p>
                `;
            }
        });

        // Profile Photo Upload
        document.getElementById('profileUpload').addEventListener('change', async (e) => {
            const file = e.target.files[0];
            if (!file) return;
            // Preview image
            const reader = new FileReader();
            reader.onload = () => document.getElementById('profileImage').src = reader.result;
            reader.readAsDataURL(file);
            // Upload to backend
            const formData = new FormData();
            formData.append('profileImage', file);
            try {
                const res = await fetch('/uploaddietitian', { method: 'POST', body: formData });
                const data = await res.json();
                if (data.success) {
                    alert('Profile photo uploaded successfully!');
                    window.location.reload(); // Reload to fetch new base64 image
                } else {
                    alert(`Upload failed: ${data.message || 'Unknown error'}`);
                }
            } catch (error) {
                console.error('Upload error:', error);
                alert('Upload error occurred.');
            }
        });

        // Set modal image source when modal is shown
        const imageModal = document.getElementById('imageModal');
        imageModal.addEventListener('show.bs.modal', () => {
            const profileImage = document.getElementById('profileImage');
            const largeProfileImage = document.getElementById('largeProfileImage');
            largeProfileImage.src = profileImage.src || 'https://via.placeholder.com/150?text=Default+Dietitian';
        });
    </script>
