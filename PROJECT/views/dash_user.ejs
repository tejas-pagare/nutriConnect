    <script>
        // Initialize Progress Chart and Recent Activities
        function initProgressChart() {
            const weightText = document.getElementById('weightText');
            const goalText = document.getElementById('goalText');
            const waterText = document.getElementById('waterText');
            const recentActivities = document.getElementById('recentActivities');
            const ctx = document.getElementById('progressChart')?.getContext('2d');

            if (!ctx || typeof Chart === 'undefined') {
                console.error('Chart.js is not loaded or canvas is missing.');
                weightText.textContent = 'Weight: N/A';
                goalText.textContent = 'Goal: N/A';
                waterText.textContent = 'Water Intake: N/A';
                recentActivities.innerHTML = '<li class="list-group-item">No progress data available</li>';
                return;
            }

            let progressData = [];
            try {
                progressData = JSON.parse('<%- JSON.stringify(progressData || []) %>');
            } catch (e) {
                console.error('Error parsing data:', e);
                weightText.textContent = 'Weight: N/A';
                goalText.textContent = 'Goal: N/A';
                waterText.textContent = 'Water Intake: N/A';
                recentActivities.innerHTML = '<li class="list-group-item">Error loading progress data</li>';
                return;
            }

            if (progressData.length) {
                // Update text with latest entry
                weightText.textContent = `Weight: ${progressData[0].weight} kg`;
                goalText.textContent = `Goal: ${progressData[0].goal}`;
                waterText.textContent = `Water Intake: ${progressData[0].waterIntake} L/day`;

                // Populate Recent Activities (up to 4 latest entries)
                const recentEntries = progressData.slice(0, 4);
                recentActivities.innerHTML = recentEntries.map(entry => `
                    <li class="list-group-item">
                        Updated on ${new Date(entry.createdAt).toLocaleDateString('en-US')}: 
                        Weight: ${entry.weight} kg, Goal: ${entry.goal}, Water Intake: ${entry.waterIntake} L/day
                    </li>
                `).join('');
            } else {
                weightText.textContent = 'Weight: N/A';
                goalText.textContent = 'Goal: N/A';
                waterText.textContent = 'Water Intake: N/A';
                recentActivities.innerHTML = '<li class="list-group-item">No progress data available</li>';
            }

            // Initialize Chart
            if (progressData.length) {
                const weightLabels = progressData.slice(-10).map(entry => new Date(entry.createdAt).toLocaleDateString('en-US'));
                const weightValues = progressData.slice(-10).map(entry => entry.weight);

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: weightLabels,
                        datasets: [{
                            label: 'Weight (kg)',
                            data: weightValues,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 2,
                            fill: false
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: false,
                                suggestedMin: Math.min(...weightValues) - 5,
                                suggestedMax: Math.max(...weightValues) + 5
                            }
                        }
                    }
                });
            } else {
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['No Data'],
                        datasets: [{
                            label: 'Weight (kg)',
                            data: [0],
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 2,
                            fill: false
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: false,
                                suggestedMin: 0,
                                suggestedMax: 100
                            }
                        }
                    }
                });
            }
        }

        // Load progress chart and other data on page load
        document.addEventListener('DOMContentLoaded', () => {
            if (document.getElementById('progressChart')) {
                initProgressChart();
            }

            // Profile Photo Upload
            document.getElementById('profileUpload').addEventListener('change', async (e) => {
                const file = e.target.files[0];
                if (!file) return;

                // Preview image
                const reader = new FileReader();
                reader.onload = () => document.getElementById('profileImage').src = reader.result;
                reader.readAsDataURL(file);

                // Upload to backend
                const formData = new FormData();
                formData.append('profileImage', file);
                try {
                    const res = await fetch('/uploaduser', { method: 'POST', body: formData });
                    const data = await res.json();
                    if (data.success) {
                        alert('Profile photo uploaded successfully!');
                        window.location.reload();
                    } else {
                        alert(`Upload failed: ${data.message || 'Unknown error'}`);
                    }
                } catch (error) {
                    console.error('Upload error:', error);
                    alert('Upload error occurred.');
                }
            });

            // Set modal image source when modal is shown
            const imageModal = document.getElementById('imageModal');
            imageModal.addEventListener('show.bs.modal', () => {
                const profileImage = document.getElementById('profileImage');
                const largeProfileImage = document.getElementById('largeProfileImage');
                largeProfileImage.src = profileImage.src;
            });
        });
    </script>
