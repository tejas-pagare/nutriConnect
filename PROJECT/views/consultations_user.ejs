    <script>
        // Retry fetch with delay
        async function fetchWithRetry(url, options, retries = 3, delay = 1000) {
            for (let i = 0; i < retries; i++) {
                try {
                    const response = await fetch(url, options);
                    if (!response.ok && response.status >= 500) {
                        throw new Error(`Server error: ${response.status}`);
                    }
                    return response;
                } catch (error) {
                    if (i < retries - 1) {
                        console.warn(`Retry ${i + 1}/${retries} for ${url}: ${error.message}`);
                        await new Promise(resolve => setTimeout(resolve, delay));
                        continue;
                    }
                    throw error;
                }
            }
        }

        // Function to fetch and display booked dietitians
        async function fetchBookedDietitians() {
            const tableBody = document.getElementById('dietitiansTableBody');
            tableBody.innerHTML = '';
            document.getElementById('loading').style.display = 'block';
            document.getElementById('error-message').style.display = 'none';

            try {
                const response = await fetchWithRetry('/bookings/client-dietitians', {
                    method: 'GET',
                    credentials: 'include',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    if (response.status === 401) {
                        window.location.href = '/roles_signin';
                        return;
                    }
                    throw new Error('Failed to fetch dietitians');
                }

                const dietitians = await response.json();
                document.getElementById('loading').style.display = 'none';
                
                if (!dietitians || dietitians.length === 0) {
                    tableBody.innerHTML = '<tr><td colspan="6" class="text-center">No dietitians found</td></tr>';
                    return;
                }
                
                dietitians.forEach((dietitian, index) => {
                    const row = document.createElement('tr');
                    row.onclick = () => openChat(dietitian._id);
                    const formattedDate = dietitian.date ? new Date(dietitian.date).toLocaleDateString('en-GB', {
                        day: '2-digit',
                        month: 'short',
                        year: 'numeric'
                    }) : 'N/A';
                    const firstLetter = dietitian.name ? dietitian.name.charAt(0).toUpperCase() : '?';
                    row.innerHTML = `
                        <td>${index + 1}</td>
                        <td>
                            ${dietitian.profileImage ? 
                                `<img src="${dietitian.profileImage}" 
                                      alt="${dietitian.name}" 
                                      class="rounded-circle"
                                      style="width: 50px; height: 50px; object-fit: cover;">` :
                                `<div class="profile-placeholder">${firstLetter}</div>`
                            }
                        </td>
                        <td>${dietitian.name}</td>
                        <td>${dietitian.specialization || 'N/A'}</td>
                        <td>${formattedDate}</td>
                        <td>
                            <button class="action-btn" title="Chat" onclick="event.stopPropagation(); openChat('${dietitian._id}')">
                                <i class="fas fa-comment"></i>
                            </button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
            } catch (error) {
                console.error('Error fetching booked dietitians:', error);
                document.getElementById('loading').style.display = 'none';
                tableBody.innerHTML = '<tr><td colspan="6" class="text-center text-danger">Failed to load dietitians. Please try again later.</td></tr>';
            }
        }

        // Function to initiate chat
        function openChat(dietitianId) {
            window.location.href = `/chat_user/${dietitianId}`;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', fetchBookedDietitians);
    </script>

