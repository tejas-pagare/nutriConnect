    <script>
      function submitQuery(event) {
        event.preventDefault();

        const form = event.target;
        const queryInput = form.querySelector('#query');
        const queryFeedback = form.querySelector('#query-feedback');

        // Reset custom validity to ensure fresh validation
        queryInput.setCustomValidity('');

        // Custom validation for query minimum length
        if (queryInput.value.length < 5) {
          queryInput.setCustomValidity('Message must be at least 5 characters long.');
          queryFeedback.textContent = 'Please enter a message (5-500 characters).';
        }

        // Check form validity and show validation only on submit
        if (!form.checkValidity()) {
          form.classList.add('was-validated');
          return;
        }

        // Prepare form data
        const formData = new FormData(form);
        const data = {
          name: formData.get('name'),
          email: formData.get('email'),
          role: formData.get('role'),
          query: formData.get('query'),
        };

        // Submit form data to server
        fetch('/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        })
          .then((response) => response.json())
          .then((result) => {
            if (result.message) {
              // Display submitted data in the message box
              const messageBox = document.getElementById('messageBox');
              messageBox.innerHTML = `
                <h2>Submission Details</h2>
                <p><strong>Name:</strong> ${data.name}</p>
                <p><strong>Email:</strong> ${data.email}</p>
                <p><strong>Role:</strong> ${data.role}</p>
                <p><strong>Query:</strong> ${data.query}</p>
              `;
              alert('Query submitted successfully!');
            } else {
              alert('Failed to submit query. Please try again.');
            }
          })
          .catch((error) => {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
          });

        // Reset form and validation styles
        form.reset();
        form.classList.remove('was-validated');
        queryInput.setCustomValidity('');
        queryFeedback.textContent = 'Please enter a message (5-500 characters).';
      }
    </script>
